<UserControl x:Class="GameValueDetector.GameValueDetectorPage"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 Background="{DynamicResource BackgroundColor_Dark}">

	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/DGLabGameController;component/Themes/Colors.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/DGLabGameController;component/Themes/ButtonStyles.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/DGLabGameController;component/Themes/ToggleButtonStyles.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/DGLabGameController;component/Themes/SettingRowGridStyle.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/DGLabGameController;component/Themes/ComboBoxStyles.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- 标题 -->
		<Grid Margin="20,20,20,20">
			<TextBlock Text="天使的心跳" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"
				Foreground="{StaticResource StandardColor_HighLight}" Grid.Column="0" />

			<StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
				<Button Click="Edit_Click" Width="32" Height="32" Style="{StaticResource FlatButtonStyle}">
					<Image Source="/DGLabGameController;component/Assets/Edit.png" Width="24" Height="24" />
				</Button>
				<Button Click="Back_Click" Width="32" Height="32" Style="{StaticResource FlatButtonStyle}">
					<Image Source="/DGLabGameController;component/Assets/Back.png" Width="24" Height="24" />
				</Button>
			</StackPanel>
		</Grid>

		<!-- 进程操作 -->
		<Grid Grid.Row="1" Margin="20,0,20,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" MinWidth="100" />
				<ColumnDefinition Width="100" />
			</Grid.ColumnDefinitions>

			<Button Name="RefreshProcessButton" Click="RefreshProcessButton_Click" Grid.Column="0" Height="36" Margin="0,0,5,0"
				Background="{StaticResource StandardColor_HighLight}" Foreground="{StaticResource BackgroundColor_Light}" FontWeight="Bold"
				Style="{StaticResource RoundButtonStyle}">刷新数据</Button>

			<Button Name="ToggleCheckButton" Click="ToggleCheckButton_Click" Grid.Column="1" Height="36" Margin="5,0,0,0"
				Background="{StaticResource StandardColor_Light}" Foreground="{StaticResource BackgroundColor_Light}" FontWeight="Bold"
				Style="{StaticResource RoundButtonStyle}">开始检测</Button>
		</Grid>

		<!-- 脚本列表 -->
		<Border Grid.Row="2" Margin="20,20" Background="{StaticResource BackgroundColor_Light}" Padding="10,10,10,10" CornerRadius="15">
			<ListView x:Name="JsonFileListBox" 
				BorderThickness="0"
				Background="Transparent"
				SelectionMode="Single"
				SelectionChanged="JsonFileListBox_SelectionChanged"
				ScrollViewer.HorizontalScrollBarVisibility="Disabled"
				ScrollViewer.VerticalScrollBarVisibility="Disabled">
				<ListView.ItemTemplate>
					<DataTemplate>
						<StackPanel Orientation="Horizontal" Margin="5">
							<TextBlock Text="{Binding}" Foreground="{StaticResource FontColor}" FontSize="14" VerticalAlignment="Center"/>
						</StackPanel>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</Border>

		<!-- 游戏输出设置 -->
		<Border Grid.Row="3" Background="{StaticResource BackgroundColor_Light}" CornerRadius="15" Margin="20,0,20,20" Padding="20,10,20,10">
			<StackPanel Cursor="">
				<!-- 目标进程 -->
				<Grid x:Name="ProcessComboGrid" Style="{StaticResource SettingRowGridStyle}" Visibility="Collapsed">
					<TextBlock Text="目标进程" Style="{StaticResource SettingRowTextStyle}" Grid.Column="0" />
					<ComboBox x:Name="ProcessComboBox" DisplayMemberPath="ProcessName" Height="32" HorizontalAlignment="Right" Grid.Column="1"
						  Template="{StaticResource ComboBoxNoHighlightTemplate}" ItemContainerStyle="{StaticResource ComboBoxItemWhiteTextStyle}" />
				</Grid>

				<!-- 检测的间隔时间 -->
				<Grid Style="{StaticResource SettingRowGridStyle}">
					<TextBlock Text="基础惩罚" Style="{StaticResource SettingRowTextStyle}" Grid.Column="0" />
					<Button Grid.Column="1" Click="PenaltyValue_Click" Style="{StaticResource FlatButtonStyle}" Height="32" HorizontalAlignment="Right">
						<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
							<TextBlock x:Name="PenaltyValueText" Text="null" Style="{StaticResource SettingRowTextStyle}" FontSize="12" VerticalAlignment="Center" Margin="10,0,5,0" />
							<Image Source="/DGLabGameController;component/Assets/Next.png" Width="14" Height="14" VerticalAlignment="Center" />
						</StackPanel>
					</Button>
				</Grid>

				<!-- 检测的间隔时间 -->
				<Grid Style="{StaticResource SettingRowGridStyle}">
					<TextBlock Text="检测间隔" Style="{StaticResource SettingRowTextStyle}" Grid.Column="0" />
					<Button Grid.Column="1" Click="SleepTime_Click" Style="{StaticResource FlatButtonStyle}" Height="32" HorizontalAlignment="Right">
						<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
							<TextBlock x:Name="SleepTimeText" Text="null" Style="{StaticResource SettingRowTextStyle}" FontSize="12" VerticalAlignment="Center" Margin="10,0,5,0" />
							<Image Source="/DGLabGameController;component/Assets/Next.png" Width="14" Height="14" VerticalAlignment="Center" />
						</StackPanel>
					</Button>
				</Grid>
			</StackPanel>
		</Border>
	</Grid>
</UserControl>