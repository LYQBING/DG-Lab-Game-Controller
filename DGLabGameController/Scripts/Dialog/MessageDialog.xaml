<Window x:Class="DGLabGameController.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Name="提示窗"
        Width="320"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

	<Border Background="{StaticResource BackgroundColor_HighLight}" CornerRadius="15" Padding="30" MouseLeftButtonDown="Window_MouseLeftButtonDown">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<!-- 标题 -->
			<TextBlock x:Name="TitleText"
					   Grid.Row="0" 
					   Text="契约已锁定"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="{StaticResource StandardColor_HighLight}"
                       Margin="0,0,0,10"/>
			<!-- 说明 -->
			<TextBlock x:Name="MessageText" 
					   Grid.Row="1" 
                       Text="此契约签订后将无法进行解除"
                       FontSize="14"
                       Foreground="{StaticResource StandardColor_HighLight}"
                       Margin="0,0,0,20"
                       TextWrapping="Wrap"/>
			<!-- 按钮 -->
			<Grid Grid.Row="2">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>

				<Button x:Name="Button1"
						Grid.Column="1" 
						Content="确定"
                        Width="90" Height="36"
                        Style="{StaticResource RoundButtonStyle}"
                        FontSize="14"
                        FontWeight="Normal"
                        Foreground="{StaticResource BackgroundColor_Dark}"
                        Background="{StaticResource StandardColor_HighLight}"
                        />

				<Button x:Name="Button2"
						Grid.Column="2"
						Content="取消"
                        Width="90" Height="36"
                        Style="{StaticResource RoundButtonStyle}"
                        FontSize="14"
                        FontWeight="Normal"
                        Foreground="{StaticResource BackgroundColor_Dark}"
                        Background="{StaticResource StandardColor_Light}"
                        Margin="10,0,0,0"
                        Visibility="Collapsed"/>
			</Grid>
		</Grid>
	</Border>
</Window>
